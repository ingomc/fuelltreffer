---
export interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { 
  title, 
  description = "Fülltreffer Dashboard - Dein persönliches Dart-Team Management mit 2k Software Integration. Verfolge Matches, Team-Stats und mehr.",
  image = "/og-image.png"
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.url.origin);
const socialImageURL = new URL(image, Astro.url.origin);

// Ensure absolute URL for social sharing
const absoluteImageURL = socialImageURL.toString();
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    
    <!-- SEO -->
    <title>{title}</title>
    <link rel="canonical" href={canonicalURL} />
    <meta name="robots" content="index, follow" />
    <meta name="author" content="Fülltreffer Team" />
    <meta name="keywords" content="Darts, Dashboard, Team Management, 2k Software, Fülltreffer, Dart Liga, Dart Verein" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={absoluteImageURL} />
    <meta property="og:image:secure_url" content={absoluteImageURL} />
    <meta property="og:image:type" content="image/png" />
    <meta property="og:image:width" content="120" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content="Fülltreffer Dashboard - Dart Team Management" />
    <meta property="og:site_name" content="Fülltreffer Dashboard" />
    <meta property="og:locale" content="de_DE" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={Astro.url} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={absoluteImageURL} />
    <meta name="twitter:image:alt" content="Fülltreffer Dashboard - Dart Team Management" />
    <meta name="twitter:creator" content="@ingomc" />
    <meta name="twitter:site" content="@ingomc" />
    
    <!-- WhatsApp optimized -->
    <meta property="og:image:url" content={absoluteImageURL} />
    <meta name="thumbnail" content={absoluteImageURL} />
    
    <!-- Theme -->
    <meta name="theme-color" content="#1e40af" />
    <meta name="color-scheme" content="light dark" />
    
    <!-- Theme initialization script - runs before page renders -->
    <script is:inline>
      // Initialize theme before page renders to prevent flash
      (function() {
        const theme = localStorage.getItem('theme') || 'system';
        const isDark = theme === 'dark' || (theme === 'system' && window.matchMedia('(prefers-color-scheme: dark)').matches);
        if (isDark) {
          document.documentElement.classList.add('dark');
        }
      })();
    </script>
  </head>
  <body class="bg-gray-50 dark:bg-gray-900 min-h-screen transition-colors duration-200">
    <slot />
  </body>
</html>